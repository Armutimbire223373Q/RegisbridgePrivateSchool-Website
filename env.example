# Database Configuration
DATABASE_URL=sqlite:///./db.sqlite3
POSTGRES_DB=regisbridge
POSTGRES_USER=regisbridge_user
POSTGRES_PASSWORD=your_secure_password_here

# FastAPI Configuration
SECRET_KEY=your-super-secret-key-here-at-least-32-characters-long
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@regisbridge.edu

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# API Configuration
API_V1_STR=/api/v1
API_HOST=localhost
API_PORT=8001

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Monitoring
SENTRY_DSN=
LOG_LEVEL=INFO

# Production Settings (set DEBUG=False for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/regisbridge_prod
# SECRET_KEY=your-production-secret-key-here
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
